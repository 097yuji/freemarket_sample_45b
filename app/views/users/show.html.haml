.mypage-top
  %header
    = render "/shared/header"

  %nav.bread-crumbs

  %main.content.clearfix

    .content__right
      %section.mypage-user-icon
        = link_to ""
        %a{href: "ユーザープロフィールページへ"}
          %figure
            = image_tag "icon.png", alt: 'ユーザーアイコン'
          %h2.bold ユーザー名
          .mypage-number
            %p
              評価
              %span 0
            %p.right
              出品数
              %span 0

