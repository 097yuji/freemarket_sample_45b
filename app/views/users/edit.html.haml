= render "shared/header"
- breadcrumb :edit_user
%nav.bread-crumbs
  = breadcrumbs separator: " > "
.mypage
  %main.mypage__body.clearfix
    .mypage__body__main
      %h2.mypage__body__main__title プロフィール
      = form_for @user do |f|
        %input{name: "#", type: "hidden", value: "user_id?"}/
        .mypage__body__main__user-name
          %figure
            = image_tag "//static.mercdn.net/images/member_photo_noimage_thumb.png", alt: "ユーザーアイコン", height: "60", width: "60"
          = f.text_field :nickname, placeholder: "例) 『遊戯王』真崎杏子", class: "mypage__body__main__user-name__input"
        .mypage__body__main__profile
          = f.text_area :introduction, placeholder: "例）「次回、『城之内 死す』。デュエルスタンバイ！」", class: "mypage__body__main__profile__input"
          %input{name: "after_save_callback", type: "hidden", value: "#"}/

          = f.submit "変更する", class: "mypage__body__main__profile__btn-red"

    = render "shared/mypage-sidebar"

= render 'shared/appbanner'

= render 'shared/footer'

= render 'shared/sellbtn'
