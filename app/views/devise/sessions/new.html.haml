.single-container
  = render 'shared/logo-header'
  %main.single-main
    .login-panel
      .login-no-account
        %p アカウントをお持ちでない方はこちら
        = link_to "sign_up" do
          新規会員登録
      .login-form-inner
        %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
          = link_to "Facebookでログイン", user_facebook_omniauth_authorize_path, class: 'btn-default btn-sns-facebook'
          %i.fab.fa-facebook.fa-2x
        %button#google-login.btn-default.btn-sns.btn-sns-google
          = link_to "Googleでログイン", user_google_oauth2_omniauth_authorize_path, class: 'btn-default btn-sns-google'
          %i.fab.fa-google.fa-2x
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .login-form-inner
          .form-group
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "input-default login-input-text"
          .form-group
            = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "input-default login-input-text"
          .form-group
            .g-recaptcha.login-captcha{"data-sitekey" => "6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc"}
              %div{:style => "width: 304px; height: 78px;"}
                %div
                  %iframe{:frameborder => "0", :height => "78", :name => "a-y6hpr5l1034n", :role => "presentation", :sandbox => "allow-forms allow-popups allow-same-origin allow-scripts allow-top-navigation allow-modals allow-popups-to-escape-sandbox", :scrolling => "no", :src => "https://www.google.com/recaptcha/api2/anchor?ar=1&k=6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc&co=aHR0cHM6Ly93d3cubWVyY2FyaS5jb206NDQz&hl=ja&v=v1550471573786&size=normal&cb=i0es1yw817dw", :width => "304"}
                %textarea#g-recaptcha-response.g-recaptcha-response{:name => "g-recaptcha-response", :style => "width: 250px; height: 40px; border: 1px solid rgb(193, 193, 193); margin: 10px 25px; padding: 0px; resize: none; display: none;"}
          = f.submit "ログイン", class: "login-submit btn-default btn-red"
          = link_to root_path do
            パスワードをお忘れの方
  = render 'shared/logo-footer'
