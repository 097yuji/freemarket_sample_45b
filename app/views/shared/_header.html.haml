.pc-header__inner
  %h1.logo-left
    = link_to root_path do
      = image_tag("https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1445690901")
    = form_tag(root_path, method: :get,class: "pc-header__form",enforce_utf8: false ) do
      %input.input-default{:name => "keyword", :placeholder => "キーワードから探す", :type => "search", :value => ""}/
      %i.fas.fa-search
  .pc-header__navbox
    .l-left
      %ul.pc-header__nav
        %li
          %h2
            = link_to root_path ,class: "pc-header__nav-root" do
              カテゴリーから探す
        %li
          %h2
            = link_to root_path ,class: "pc-header__nav-root" do
              ブランドから探す
    .l-right
      %ul.pc-header__login-nav
        %li
          %a.pc-header__btn--btn-red{:href => "https://www.mercari.com/jp/login/?login_callback=https%3A%2F%2Fwww.mercari.com%2Fjp%2F"} ログイン
        %li
          %a.pc-header__btn--signup{:href => "https://www.mercari.com/jp/signup/"} 新規会員登録
